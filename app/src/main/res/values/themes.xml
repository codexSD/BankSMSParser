<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BankCardsManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BankCardsManager.Light" parent="Theme.BankCardsManager">
        <item name="fragmentBackground">@color/background</item>
        <item name="primary">@color/primaryLight</item>
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/grayDark</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorSecondary">@color/light_red</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/droid_arabic_kufi</item>
<!--        <item name="android:fontFamily">@font/ooredoo</item>-->
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.BankCardsManager.Dark" parent="Theme.BankCardsManager">

    </style>

    <style name="textview_listItem_purchases">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">SAR</item>
    </style>


</resources>